<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_left_item_rv_design_info_fragment"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/tv_title_item_rv_design_info_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_left_item_rv_design_info_fragment"
        android:layout_toRightOf="@+id/iv_left_item_rv_design_info_fragment"
        android:lines="1"
        android:text="钢筋原材料检验批（1）"
        android:textColor="#8a000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_date_item_rv_design_info_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_left_item_rv_design_info_fragment"
        android:layout_toRightOf="@+id/iv_left_item_rv_design_info_fragment"
        android:text="日期：2016-9-9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/iv_left_item_rv_design_info_fragment"
        android:layout_marginTop="5dp"
        android:background="#9e9e9e"
        android:lines="1" />

</RelativeLayout>