<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_item_rv_tunnel_records_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="断面"
            android:textColor="#000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_date_item_rv_tunnel_records_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="浇筑日期：2016/12/12" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_rv_tunnel_records_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#99e0e0e0" />

</LinearLayout>