<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/btncon"
                    android:layout_width="fill_parent"
                    android:layout_height="44.0dip"
                    android:background="@color/gray"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/back"
                        android:layout_width="20.0dip"
                        android:layout_height="30.0dip"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="2.0dip"
                        android:background="@drawable/btn_back"
                        android:gravity="center"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/prp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:text="@string/aboutus"
                    android:textColor="@color/darkgray"
                    android:singleLine="true"
                    android:ellipsize="middle"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:focusableInTouchMode="true"
                    android:textSize="16.0sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#000000" />
        </LinearLayout>

        <!-- 顶部蓝色区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deepSkyBlue"
            android:padding="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imageView1"
                android:gravity="center|center_horizontal|center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/newsapp_logo"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="门户平台"
                android:layout_marginTop="10dip"
                android:gravity="center_horizontal"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/versionname"
                android:layout_width="match_parent"
                android:layout_height="20dip"
                android:textSize="15sp"
                android:text="2.5"
                android:layout_below="@+id/title"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="@color/white"/>
        </LinearLayout>

        <!-- 服务信息 Titile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:background="@color/red1">

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/deepSkyBlue"
                android:layout_marginTop="5dp"
                android:text="服务信息"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:gravity="left|center_vertical"/>
        </LinearLayout>

        <!-- 服务信息 Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="路电："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/phone1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="021-93535"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>

            <!-- 咨询 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="市电："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/phone2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="010-518993535"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>
            <!-- 第三行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="手机："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/phone3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="18510593535"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 联系 Titile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:background="@color/red1">

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/deepSkyBlue"
                android:layout_marginTop="5dp"
                android:text="联系"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:gravity="left|center_vertical"/>
        </LinearLayout>

        <!-- 联系 Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="地址："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="北京市海淀区大柳树路2号"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>

            <!-- 咨询 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="网址："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/homepage"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="http://www.rails.com.cn"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 联系 Titile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:background="@color/red1">

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/deepSkyBlue"
                android:layout_marginTop="5dp"
                android:text="版权与技术支持"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:gravity="left|center_vertical"/>
        </LinearLayout>

        <!-- 服务信息 Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- 第一行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="版权所有："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/provider1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="中国铁路总公司"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>

            <!-- 咨询 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="技术支持："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/provider2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="中国铁道科学研究院"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>
            <!-- 第三行 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="鸣谢："
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/provider3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:text="上海同望信息技术有限公司"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>